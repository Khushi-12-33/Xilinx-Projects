library IEEE;
use IEEE.STD_LOGIC_1164.ALL;
use IEEE.STD_LOGIC_ARITH.ALL;
use IEEE.STD_LOGIC_UNSIGNED.ALL;
USE IEEE.STD_LOGIC_TEXTIO.ALL;
USE STD.TEXTIO.ALL;

ENTITY BG2_TEST IS
END BG2_TEST;

ARCHITECTURE testbench_arch OF BG2_TEST IS
    FILE RESULTS: TEXT OPEN WRITE_MODE IS "results.txt";

    COMPONENT BG_2
        PORT (
            A : In std_logic;
            B : In std_logic;
            Y0 : Out std_logic;
            Y1 : Out std_logic;
            Y2 : Out std_logic;
            Y3 : Out std_logic;
            Y4 : Out std_logic;
            Y5 : Out std_logic;
            Y6 : Out std_logic
